<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartReferee"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="START AS REFEREE"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btnStartDebater"
        app:layout_constraintRight_toRightOf="@id/btnStartDebater"
        tools:layout_editor_absoluteX="555dp"
        tools:layout_editor_absoluteY="214dp" />

    <Button
        android:id="@+id/btnStartDebater"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="START AS DEBATER"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btnExit"
        app:layout_constraintRight_toRightOf="@id/btnExit"
        tools:layout_editor_absoluteX="555dp" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="EXIT"
        android:textColor="#000000"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</android.support.constraint.ConstraintLayout>